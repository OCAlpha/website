<h1>Current Offices</h1>

<table class="table table-bordered">
  <tr>
    <th>Title</th>
    <th>Officer</th>
    <th>Budget</th>
    <% if current_user.officer? %>
      <th></th>
      <% if current_user.admin? %>
        <th></th>
      <% end %>
    <% end %>
  </tr>

<% @offices.each do |office| %>
  <tr>
    <td><%= link_to office.title, office %></td>
    <td><%= office.officer.name %></td>
    <td><%= number_to_currency(office.budget, :currency => "$") %></td>
    <% if current_user.officer? %>
      <td><%= link_to 'Edit', edit_office_path(office) %></td>
      <% if current_user.admin? %>
        <td><%= link_to 'Destroy', office, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      <% end %>
    <% end %>
  </tr>
<% end %>
</table>

<br />
<% if current_user.admin? %>
  <%= link_to 'New Office', new_office_path %>
<% end %>
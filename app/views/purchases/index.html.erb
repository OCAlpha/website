<h1>All Purchases</h1>

<table class="table table-bordered">
  <tr>
    <th>User</th>
    <th>Purchase amount</th>
    <th>Office</th>
    <th>Note</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @purchases.each do |purchase| %>
  <tr>
    <td><%= link_to purchase.user.name, user_path(purchase.user) %></td>
    <td><%= number_to_currency purchase.purchase_amount, :currency => "$" %></td>
    <td><%= link_to purchase.office.title, office_path(purchase.office) %></td>
    <td><%= purchase.note %></td>
    <td><%= link_to 'Show', purchase %></td>
    <td><%= link_to 'Edit', edit_purchase_path(purchase) %></td>
    <td><%= link_to 'Destroy', purchase, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

<br />


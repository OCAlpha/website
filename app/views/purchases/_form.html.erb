<%= form_for(@purchase) do |f| %>
  <% if @purchase.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@purchase.errors.count, "error") %> prohibited this purchase from being saved:</h2>

      <ul>
      <% @purchase.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :user_id %><br />
    <%= f.select :user_id, User.all.collect {|u| [u.name, u.id]}.sort %>
  </div>
  <div class="field">
    <%= f.label "Purchased From" %>
    <%= f.text_field :purchase_location %>
  </div>
  <div class="field">
    <%= f.label :purchase_amount %><br />
    <%= f.number_field :purchase_amount %>
  </div>
  <div class="field">
    <%= f.label :office_id %><br />
    <%= f.select :office_id, Office.all.collect {|o| [o.title, o.id]} %>
  </div>
  <div class="field">
    <%= f.label :note %><br />
    <%= f.text_field :note %>
  </div>
  <div class="actions">
    <%= f.submit "Submit purchase" %>
  </div>
<% end %>

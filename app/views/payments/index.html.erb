<h1>All Payments</h1>
<table class="table table-bordered">
  <tr>
    <th>Paid by user</th>
    <th>Collected by user</th>
    <th>Amount paid</th>
    <th>Notes</th>
    <th>Reconciled</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @payments.each do |payment| %>
  <tr>
    <td><%= link_to payment.payer.name, user_path(payment.payer) %></td>
    <td><%= link_to payment.collector.name, user_path(payment.collector) %></td>
    <td><%= number_to_currency(payment.amount_paid, :currency => "$") %></td>
    <td><%= payment.notes %></td>
    <td><%= payment.reconciled %></td>
    <td><%= link_to 'Show', payment %></td>
    <td><%= link_to 'Edit', edit_payment_path(payment) %></td>
    <td><%= link_to 'Destroy', payment, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>


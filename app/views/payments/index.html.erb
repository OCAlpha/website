<h1>Listing payments</h1>

<table>
  <tr>
    <th>Paid by user</th>
    <th>Collected by user</th>
    <th>Amount paid</th>
    <th>Notes</th>
    <th>Reconciled</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @payments.each do |payment| %>
  <tr>
    <td><%= payment.paid_by_user_id %></td>
    <td><%= payment.collected_by_user_id %></td>
    <td><%= payment.amount_paid %></td>
    <td><%= payment.notes %></td>
    <td><%= payment.reconciled %></td>
    <td><%= link_to 'Show', payment %></td>
    <td><%= link_to 'Edit', edit_payment_path(payment) %></td>
    <td><%= link_to 'Destroy', payment, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>


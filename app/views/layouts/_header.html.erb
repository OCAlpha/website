<header class="navbar navbar-fixed-top navbar-inverse">
    <div class="navbar inner">
      <div class="container">
        <%= link_to "Agoknights.com", root_path, id:"logo" %>
        <nav>
          <ul class="nav pull-right">
            <li><%= link_to "Home", root_path %></li>
            <li><%= link_to "About Alpha", about_path %></li>
            <li><%= link_to "Calendar", calendar_path %></li>
            <% if signed_in? %>
                <li> <%= link_to "Users", users_path %></li>
                <li id="main-menu" class="dropdown-menu" role="menu" aria-labeledby="dLabel">
                    <li id="account-menu" class="dropdown-submenu">
                        <a href="#" tabindex="-1">
                            Account
                        </a>
                        <ul class="dropdown-menu">
                            <li><%= link_to "Profile", current_user %></li>
                            <li><%= link_to "Settings", edit_user_path(current_user) %></li>
                            <li class="divider"></li>
                            <li><%= link_to "Sign out", signout_path, method: "delete" %></li>
                        </ul>
                    </li>
                    <li id="treasury-menu" class="dropdown-submenu">
                        <a href = "#" tabindex = "-1">
                            Treasury
                        </a>
                        <ul class="dropdown-menu" role="menu" aria-labelledby="dLabel">
                            <li><%= link_to "Make a Payment", newpayment_path, method: "create" %></li>
                            <li><%= link_to "Process Purchase", clubpurchase_path, method: "create" %></li>
                            <% if executor? %>
                                <li><%= link_to "Charge Money", newcharge_path, method: "create" %></li>
                                <li><%= link_to "Transfer Money", newtransfer_path, method: "create" %></li>
                            <% end %>
                            <li><%= link_to "View Officers/Budgets", offices_path %></li>
                        </ul>
                    </li>
                </li>
                
            <% else %>    
                <li><%= link_to "Sign In", signin_path %></li>
            <% end %>
          </ul>
        </nav>
      </div>

<h1>Listing account_transfers</h1>

<table>
  <tr>
    <th>From account</th>
    <th>To account</th>
    <th>Amount</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @account_transfers.each do |account_transfer| %>
  <tr>
    <td><%= account_transfer.from_account_id %></td>
    <td><%= account_transfer.to_account_id %></td>
    <td><%= account_transfer.amount %></td>
    <td><%= link_to 'Show', account_transfer %></td>
    <td><%= link_to 'Edit', edit_account_transfer_path(account_transfer) %></td>
    <td><%= link_to 'Destroy', account_transfer, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>


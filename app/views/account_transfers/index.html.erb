<h1>All Account Transfers</h1>

<table class="table table-bordered">
  <tr>
    <th>From account</th>
    <th>To account</th>
    <th>Amount</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @account_transfers.each do |account_transfer| %>
  <tr>
    <td><%= link_to account_transfer.from_account.name, account_path(account_transfer.from_account) %></td>
    <td><%= link_to account_transfer.to_account.name, account_path(account_transfer.to_account) %></td>
    <td><%= number_to_currency(account_transfer.amount, :currency => "$") %></td>
    <td><%= link_to 'Show', account_transfer %></td>
    <td><%= link_to 'Edit', edit_account_transfer_path(account_transfer) %></td>
    <td><%= link_to 'Destroy', account_transfer, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

